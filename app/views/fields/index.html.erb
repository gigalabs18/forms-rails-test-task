<% content_for :title, "Fields" %>

<div class="flex items-center justify-between mb-4">
  <h1 class="text-2xl font-semibold">Fields</h1>
  <%= link_to "New field", new_field_path, class: "btn btn-primary" %>
  </div>

<div id="fields" class="grid gap-3">
  <% @fields.each do |field| %>
    <div id="<%= dom_id(field) %>" class="card">
      <div class="card-body">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-lg font-medium"><%= field.label %></h2>
            <p class="text-sm text-slate-600">Type: <span class="font-medium"><%= field.field_type.humanize %></span></p>
            
          </div>
          <div class="flex flex-wrap gap-2">
            <%= link_to "Show", field_path(field), class: "btn btn-secondary" %>
            <%= link_to "Edit", edit_field_path(field), class: "btn btn-ghost" %>
            <%= button_to "Delete", field_path(field), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
