<li id="<%= dom_id(opt) %>" class="py-2">
  <div class="flex items-center justify-between gap-3">
    <div class="flex items-center gap-2">
      <span class="font-medium"><%= opt.label %></span>
      <span class="text-gray-500">(<%= opt.value %>)</span>
    </div>
    <div class="flex items-center gap-1">
      <button type="button" id="edit_option_btn_<%= opt.id %>" data-option-id="<%= opt.id %>" class="btn btn-ghost p-2 option-edit-toggle" title="Edit option">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5h2m2 0h2m-6 4h6m-6 4h6M7 7h.01M7 11h.01M7 15h.01M4 6a2 2 0 012-2h6l4 4v10a2 2 0 01-2 2H6a2 2 0 01-2-2V6z"/></svg>
      </button>
      <%= link_to option_path(opt), data: { turbo_method: :delete, turbo_confirm: 'Delete this option?' }, class: 'btn btn-ghost p-2 text-red-600 hover:bg-red-50', title: 'Delete option' do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M9 7h6m-7 0a1 1 0 001 1h6a1 1 0 001-1m-8 0V6a2 2 0 012-2h2a2 2 0 012 2v1"/></svg>
      <% end %>
    </div>
  </div>

  <div id="edit_option_panel_<%= opt.id %>" data-option-id="<%= opt.id %>" class="mt-3 hidden option-edit-panel" style="display:none;">
    <%= form_with model: opt, url: option_path(opt), method: :patch, data: { turbo_stream: true }, html: { class: 'option-edit-form', 'data-option-id': opt.id } do |f| %>
      <div class="grid grid-cols-12 gap-2 items-end">
        <div class="col-span-12 md:col-span-5">
          <label class="label">Label</label>
          <%= f.text_field :label, class: 'input w-full' %>
        </div>
        <div class="col-span-12 md:col-span-5">
          <label class="label">Value</label>
          <%= f.text_field :value, class: 'input w-full' %>
        </div>
        <div class="col-span-12 md:col-span-2">
          <label class="label hidden md:block">&nbsp;</label>
          <%= f.submit 'Update', class: 'btn btn-secondary w-full md:w-auto' %>
        </div>
      </div>
    <% end %>
  </div>

</li>
