<% content_for :title, 'Forgot password' %>

<div class="max-w-md mx-auto mt-8">
  <div class="card">
    <div class="card-body">
      <h1 class="text-xl font-semibold mb-4">Forgot your password?</h1>
      <%= form_with(model: resource, scope: resource_name, url: password_path(resource_name), class: 'space-y-4') do |f| %>
        <div>
          <%= f.label :email, class: 'label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input' %>
        </div>
        <div>
          <%= f.submit 'Send reset instructions', class: 'btn btn-primary w-full' %>
        </div>
      <% end %>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
