<% content_for :title, 'Sign up' %>

<div class="max-w-md mx-auto mt-8">
  <div class="card">
    <div class="card-body">
      <h1 class="text-xl font-semibold mb-4">Create your account</h1>
      <%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name), class: 'space-y-4') do |f| %>
        <div>
          <%= f.label :email, class: 'label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input' %>
        </div>

        <div>
          <%= f.label :password, class: 'label' %>
          <%= f.password_field :password, autocomplete: 'new-password', class: 'input' %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-xs text-slate-500">Minimum <%= @minimum_password_length %> characters</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: 'label' %>
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'input' %>
        </div>

        <div>
          <%= f.submit 'Sign up', class: 'btn btn-primary w-full' %>
        </div>
      <% end %>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
