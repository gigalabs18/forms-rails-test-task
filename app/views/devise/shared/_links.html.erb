<div class="mt-4 text-sm text-slate-600 space-x-4">
  <% if controller_name != 'sessions' %>
    <%= link_to 'Log in', new_session_path(resource_name), class: 'btn btn-ghost px-0' %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to 'Sign up', new_registration_path(resource_name), class: 'btn btn-ghost px-0' %>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <%= link_to 'Forgot your password?', new_password_path(resource_name), class: 'btn btn-ghost px-0' %>
  <% end %>
</div>
