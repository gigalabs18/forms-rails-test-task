<% content_for :title, "Forms" %>

<div class="flex items-center justify-between mb-4">
   <h1 class="text-2xl font-semibold mb-4">Forms</h1>
  <%= link_to "New form", new_form_path, class: "btn btn-primary" %>
  </div>

<div id="forms" class="grid gap-3">
  <% @forms.each do |form| %>
    <div id="<%= dom_id(form) %>" class="card">
      <div class="card-body">
        <h2 class="text-lg font-medium"><%= form.title %></h2>
        <div class="mt-3 flex flex-wrap gap-2">
          <%= link_to "Show", form, class: "btn btn-secondary" %>
          <%= link_to "Submissions", form_submissions_path(form), class: "btn btn-ghost" %>
          <% if current_user&.super_admin? || form.user_id == current_user&.id %>
            <%= link_to "Edit", edit_form_path(form), class: "btn btn-ghost" %>
            <%= button_to "Delete", form_path(form), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
