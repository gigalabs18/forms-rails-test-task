<% content_for :title, "Editing form" %>

<div class="mb-4 flex items-center justify-between">
  <h1 class="text-2xl font-semibold">Edit form</h1>
  <div class="space-x-2">
    <%= link_to "Back to forms", forms_path, class: "btn-ghost" %>
    <%= link_to "Show this form", @form, class: "btn-secondary" %>
  </div>
</div>

<div class="card"><div class="card-body">
  <%= form_with(model: @form, class: "space-y-4") do |f| %>
    <% if @form.errors.any? %>
      <div class="rounded bg-red-50 text-red-800 border border-red-200 px-4 py-3">
        <h2 class="font-medium mb-2"><%= pluralize(@form.errors.count, "error") %> prevented saving:</h2>
        <ul class="list-disc list-inside">
          <% @form.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :title, class: "label" %>
      <%= f.text_field :title, class: "input" %>
    </div>

    <div>
      <%= f.submit "Save Changes", class: "btn btn-primary" %>
    </div>
  <% end %>
</div></div>
