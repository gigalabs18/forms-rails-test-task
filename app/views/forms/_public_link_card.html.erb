<div class="mb-6 card max-w-4xl" id="public_link_card">
  <div class="card-body">
    <div class="flex flex-col md:flex-row md:items-center gap-3">
      <div class="flex-1">
        <label class="label">Shareable public URL:</label>
        <input class="input" type="text" readonly value="<%= fill_form_url(form.public_token) %>" data-form-show-target="publicLinkInput" id="publicLinkInput">
      </div>
      <div class="flex-1">
        <label class="label">Actions:</label>
        <%= button_to 'Regenerate link', regenerate_link_form_path(form), method: :post, form: { data: { turbo_confirm: 'Regenerate the public link? Existing link will stop working.' }, class: 'inline' }, class: 'btn btn-danger shrink-0' %>
        <button type="button" class="btn btn-secondary shrink-0" id="copyPublicLink" data-form-show-target="copyButton">Copy Link</button>
        <%= link_to "View submissions", form_submissions_path(form), class: "btn btn-secondary shrink-0" %>
      </div>
    </div>
    <p class="mt-2 text-xs text-slate-500">Anyone with this link can fill the form. No login required.</p>
  </div>
</div>
