<div class="flex items-center justify-between mb-6">
  <div>
    <h1 class="text-2xl font-semibold">Fill Form: <%= @form.title %></h1>
    <p class="mt-1 text-sm text-slate-600">Please provide your responses below.</p>
  </div>
  <%= link_to 'Back', (user_signed_in? ? forms_path : fill_form_path(@form.public_token)), class: "btn btn-ghost" %>
</div>

<div class="card max-w-2xl">
  <div class="card-body">
    <% if @form.fields.empty? %>
      <p class="text-slate-600">This form has no fields yet.</p>
    <% else %>
      <%= form_with url: form_submissions_path(@form), method: :post, class: "space-y-6" do %>
        <div class="grid gap-5">
          <% @form.fields.ordered.each do |field| %>
            <%= render 'field_input', field: field %>
          <% end %>
        </div>

        <div class="mt-4 flex items-center gap-3">
          <%= submit_tag 'Submit', class: "btn btn-primary" %>
          <%= link_to 'Cancel', (user_signed_in? ? forms_path : fill_form_path(@form.public_token)), class: "btn btn-ghost" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
